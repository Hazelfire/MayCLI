<command>
Usage: may task [--help]
</command>
<query>
query getTasks{
  allTasks {
    edges {
      node {
        id
        name
        done
      }
    }
  }
}
</query>

<display>
{% if not errors %}
Tasks:
{% if data.allTasks.edges | length == 0 %}You don't have any tasks{% endif -%}
{% for task in data.allTasks.edges -%}
  - {{task.node.id}} {{ task.node.name }} {{"Done" if task.node.done else "Incomplete"}}
{% endfor %}

{% else %}
Error loging in: {{ errors }}
{% endif %}
</display>
