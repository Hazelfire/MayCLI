<query>
mutation addTask($input: CreateTaskMutationInput!){
  taskAdd(input: $input) {
    id
    name
  }
}
</query>
<display>
{% if data %}
{% set task = data.taskAdd %}
Successfully created task!
  Id: {{task.id}}
  Name: {{task.name}}
Errors:
{{task.errors}}
{% else %}
Error creating task: {{ errors }}
{% endif %}
</display>
